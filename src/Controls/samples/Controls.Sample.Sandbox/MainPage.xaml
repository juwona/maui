    <ContentPage.Content>
    <VerticalStackLayout Spacing="10">
        <HorizontalStackLayout Spacing="10">
            <Button Text="Increment" Clicked="Button_Clicked" FontSize="30" BackgroundColor="DarkGray">
                <Button.ContextFlyout>
                    <MenuFlyoutItem Text="Increment by 10" Clicked="OnSuperIncrementMenuItemClicked" CommandParameter="10"></MenuFlyoutItem>
                    <MenuFlyoutItem Text="Increment by 20" Clicked="OnSuperIncrementMenuItemClicked" CommandParameter="20"></MenuFlyoutItem>
                    <MenuFlyoutSubItem Text="More options">
                        <MenuFlyoutItem Text="Increment by 1,000!" Clicked="OnSuperIncrementMenuItemClicked" CommandParameter="1000"></MenuFlyoutItem>
                        <MenuFlyoutItem Text="Increment by 1,000,000!" Clicked="OnSuperIncrementMenuItemClicked" CommandParameter="1000000"></MenuFlyoutItem>
                    </MenuFlyoutSubItem>
                </Button.ContextFlyout>
            </Button>
            <Label Text="{Binding CounterValue}" FontSize="30" VerticalOptions="Center"></Label>
        </HorizontalStackLayout>

        <Label BackgroundColor="{Binding LabelBackgroundColor}" Text="Choose label color here" FontSize="30">
            <Label.ContextFlyout>
                <MenuFlyoutItem Text="Orange" Command="{Binding SetLabelBackgroundColor123}" CommandParameter="Orange">
                    <MenuFlyoutItem.IconImageSource>
                        <FontImageSource Glyph="X" FontFamily="Arial" Color="Orange" />
                    </MenuFlyoutItem.IconImageSource>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Red" Command="{Binding SetLabelBackgroundColor}" CommandParameter="Red">
                    <MenuFlyoutItem.IconImageSource>
                        <FontImageSource Glyph="X" FontFamily="Arial" Color="Red" />
                    </MenuFlyoutItem.IconImageSource>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Blue" Command="{Binding SetLabelBackgroundColor}" CommandParameter="Blue">
                    <MenuFlyoutItem.IconImageSource>
                        <FontImageSource Glyph="X" FontFamily="Arial" Color="Blue" />
                    </MenuFlyoutItem.IconImageSource>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Green" Command="{Binding SetLabelBackgroundColor}" CommandParameter="Green">
                    <MenuFlyoutItem.IconImageSource>
                        <FontImageSource Glyph="X" FontFamily="Arial" Color="Green" />
                    </MenuFlyoutItem.IconImageSource>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Pink" Command="{Binding SetLabelBackgroundColor}" CommandParameter="Pink">
                    <MenuFlyoutItem.IconImageSource>
                        <FontImageSource Glyph="X" FontFamily="Arial" Color="Pink" />
                    </MenuFlyoutItem.IconImageSource>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Brown" Command="{Binding SetLabelBackgroundColor}" CommandParameter="Brown">
                    <MenuFlyoutItem.IconImageSource>
                        <FontImageSource Glyph="X" FontFamily="Arial" Color="Brown" />
                    </MenuFlyoutItem.IconImageSource>
                </MenuFlyoutItem>
            </Label.ContextFlyout>
        </Label>

        <Label MaximumHeightRequest="400" />

        <Label Text="Right-click to pick my color" x:Name="ColorLabel">
            <Label.ContextFlyout>
                <MenuFlyoutItem Text="Make label red" Clicked="MakeLabelRed">
                    <MenuFlyoutItem.IconImageSource>
                        <FontImageSource Glyph="X" FontFamily="Arial" Color="Red" />
                    </MenuFlyoutItem.IconImageSource>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Make label blue" Clicked="MakeLabelBlue">
                    <MenuFlyoutItem.IconImageSource>
                        <FontImageSource Glyph="X" FontFamily="Arial" Color="Blue" />
                    </MenuFlyoutItem.IconImageSource>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator />
                <MenuFlyoutSubItem Text="More colors">
                    <MenuFlyoutItem Text="Hot pink" Clicked="MakeLabelHotPink">
                        <MenuFlyoutItem.IconImageSource>
                            <FontImageSource Glyph="X" FontFamily="Arial" Color="HotPink" />
                        </MenuFlyoutItem.IconImageSource>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem Text="Pale Goldenrod" Clicked="MakeLabelPaleGoldenrod">
                        <MenuFlyoutItem.IconImageSource>
                            <FontImageSource Glyph="X" FontFamily="Arial" Color="PaleGoldenrod" />
                        </MenuFlyoutItem.IconImageSource>
                    </MenuFlyoutItem>
                </MenuFlyoutSubItem>
            </Label.ContextFlyout>
        </Label>

        <Label MaximumHeightRequest="400" />

        <Label Text="Choose menu image here" FontSize="30">
            <Label.ContextFlyout>
                <MenuFlyoutItem Text="Check menu happiness" IconImageSource="{Binding CurrentIconImageSource}" Clicked="OnHappinessMenuItemClicked"></MenuFlyoutItem>
                <MenuFlyoutSeparator />
                <MenuFlyoutItem Text="Make menu Happy" IconImageSource="{Binding HappyImageSource}" Clicked="OnChooseHappyMenuItemClicked"></MenuFlyoutItem>
                <MenuFlyoutItem Text="Make menu Medium" IconImageSource="{Binding MediumImageSource}" Clicked="OnChooseMediumMenuItemClicked"></MenuFlyoutItem>
                <MenuFlyoutItem Text="Make menu Not happy" IconImageSource="{Binding NotHappyImageSource}" Clicked="OnChooseNotHappyMenuItemClicked"></MenuFlyoutItem>
            </Label.ContextFlyout>
        </Label>

        <Entry Placeholder="No context here">
        </Entry>

        <Entry Placeholder="Has a context menu">
            <Entry.ContextFlyout>
                <MenuFlyoutItem Text="Entry menu 1" Clicked="OnEntryMenuItemClicked"></MenuFlyoutItem>
                <MenuFlyoutItem Text="Entry menu 2" Clicked="OnEntryMenuItemClicked"></MenuFlyoutItem>
                <MenuFlyoutItem Text="Entry menu 3" Clicked="OnEntryMenuItemClicked"></MenuFlyoutItem>
            </Entry.ContextFlyout>
        </Entry>

        <WebView Source="https://bing.com" MinimumHeightRequest="300" x:Name="wv">
            <WebView.ContextFlyout>
                <MenuFlyoutItem Text="WebView menu 1" Clicked="OnWebViewMenuItemClicked"></MenuFlyoutItem>
                <MenuFlyoutItem Text="WebView menu 2" Clicked="OnWebViewMenuItemClicked"></MenuFlyoutItem>
                <MenuFlyoutItem Text="WebView menu 3" Clicked="OnWebViewMenuItemClicked"></MenuFlyoutItem>
            </WebView.ContextFlyout>
        </WebView>
    </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
